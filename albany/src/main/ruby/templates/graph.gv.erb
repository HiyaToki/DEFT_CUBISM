<% @sentences.each do |sentence| %>
    <% prev_node = null %>

    <% sentence.nodes.each do |node| %>
        digraph sentence<%= @sentence.id %> {
          node[shape=none,margin=0]
          node<%= node.id %> [label=<<table border="0" cellborder="0" cellspacing="0">
              <tr><td><table border="1" cellborder="0" cellspacing="0">
                <% node.labels.each do |label| %>
                    <tr><td><%= label %></td></tr>
                <% end %>
              </table></td></tr>
            </table>>];

        <% if prev_node %>
            node<%= prev_node.id %> ->node<%=node.id %> [label="LLL"]
            <% prev_node = node %>
        <% end %>
    <% end %>
    }
<% end %>